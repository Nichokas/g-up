{
    "id": "io.github.nichokas.g_up",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "23.08",
    "sdk": "org.freedesktop.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "g-up",
    "finish-args": [
        "--share=network"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "env": {
            "RUST_BACKTRACE": "1",
            "RUST_LOG": "g-up=debug",
            "CARGO_HOME": "/run/build/g_up/cargo"
        }
    },
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "g-up",
            "builddir": true,
            "buildsystem": "simple",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/Nichokas/g-up"
                },
                {
                    "type": "file"
                    "path": "generated-sources.json"
                }
            ]
            "build-commands": [
                "cargo --offline fetch --manifest-path Cargo.toml --verbose",
                "cargo --offline build --release --verbose",
                "install -Dm755 target/release/g-up --target-directory=/app/bin"
            ]
        }
    ]
}

